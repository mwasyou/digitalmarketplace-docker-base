server {
    listen 80;

    location ~ ^(?:/[-a-z]+)?/static/(.+)$ {
        alias /app/app/static/$1;
    }

    location ~ ^(?:/[-a-z/]+)?/_status$ {
        include uwsgi_params;
        uwsgi_pass unix:///run/uwsgi.sock;
    }

    location / {
        auth_basic "Restricted";
        auth_basic_user_file "/etc/nginx/.htpasswd";
        include uwsgi_params;
        uwsgi_pass unix:///run/uwsgi.sock;
    }
}
